# .
alias ..="cd ../"
alias ...="cd ../../"
alias ....="cd ../../../"

# A
alias addd="creq --dev symfony/var-dumper"
alias art="php artisan"

# B
alias bb="cd ~/bin"

# C
alias c="composer"
alias creq="composer require"

# D
alias d="docker"
alias ddd="c require symfony/var-dumper --dev"
alias dot="cd ~/dotfiles"
alias dr="docker restart"

# E
alias eal="vim ~/.zsh_aliases"
alias eza="vim ~/.zsh_aliases"
alias ezrc="vim ~/.zshrc"

# G
alias g="git"
alias gaa="git add ."
alias gb="git branch"
alias gc="git commit -m"
alias gca="git commit --amend"
alias gcb="git checkout -"
alias gco="git checkout"
alias gcob="git checkout -b"
alias gcn!="git commit -v --no-edit --amend"
alias gcv="git commit -v -m"
alias gc!="git commit -v --amend"
alias gf="git fetch"
alias giff="git diff"
alias gp="git push"
alias gl=pretty_git_log
alias gla=pretty_git_log_all
alias gm="gco master"
alias gog="google"
alias gpu="git push -u origin"
alias gs="git status"
alias gsb="git status -sb"
alias gslist="git stash list"

# K
alias kb="kubectl"

# L
alias la="ls -la"
alias ld="ls -ld .?*"
alias ls="ls -G"
alias ll="ls -l"

# M
alias mk="minikube"
function mkcd() { mkdir $@ && cd $@ }

# N
function note() { echo "date: $(date)" >> $HOME/drafts.txt echo "$@" >> $HOME/drafts.txt echo "" >> $HOME/drafts.txt }
alias nrp="npm run prod"
alias nrw="npm run watch"
alias notes="vim $HOME/drafts.txt"
alias nv="vim $HOME/.config/nvim"

# P
alias path="echo -e ${PATH//:/\\n}"
alias pf="./vendor/bin/phpunit --filter"
alias phc="./vendor/bin/phpunit --generate-configuration"
alias phs="php -S localhost:3000"
alias ph="./vendor/bin/phpunit"
alias ping="ping -c 5"
alias py="python3"
alias p8="valet use php@8.2"
alias p7="valet use php@7.4"

# S
alias serv="art serve"
alias sgi='eval "$(ssh-agent -s)"'
alias storm='open -na "PhpStorm.app" --args "$@"'
alias szrc="source ~/.zshrc"

# T
alias tink="php artisan tinker"

# U
alias up="echo $@"
alias unwip="git reset HEAD~1"

# V
alias vim="nvim"

# W
alias wip="git add . && git commit -v -m '====WIP===='"
alias whatadded="git log --follow --diff-filter=A --find-renames==40% $1"
alias w="cd $HOME/www;clear"
